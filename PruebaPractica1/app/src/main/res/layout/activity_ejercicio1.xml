<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ejercicio1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E5E5E5"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="-1dp"
            android:ems="10"
            android:text="Informacion del vendedor"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#14213D"/>

        <EditText
            android:id="@+id/txtName"
            android:layout_width="382dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="168dp"
            android:digits="abcdefghijklmnopqrstuvwxyz  ABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:ems="10"
            android:hint="Nombre del vendedor"
            android:inputType="text"
            android:textColor="#14213D"
            tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/txtTotal"
            android:layout_width="383dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="288dp"
            android:ems="10"
            android:hint="Total de Ventas"
            android:inputType="number"
            android:minHeight="48dp"
            android:textColor="#14213D" />

        <Spinner
            android:id="@+id/ListMes"
            android:layout_width="382dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="354dp"
            android:entries="@array/Meses"
            android:prompt="@string/Titulo"
            android:textColor="#14213D"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/txtId"
            android:layout_width="382dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="226dp"
            android:hint="Codigo del vendedor"
            android:textColor="#14213D"
            tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />


        <ImageView
            android:id="@+id/IdImag"
            android:layout_width="109dp"
            android:layout_height="111dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="158dp"
            android:layout_marginLeft="158dp"
            android:layout_marginTop="42dp"
            android:ems="10"
            android:src="@drawable/camara" />

        <Button
            android:id="@+id/btnCalcular"
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="435dp"
            android:background="#14213D"
            android:onClick="Calcular"
            android:text="Calcular Comicion Y Agregar Foto"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnSalir"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="540dp"
            android:background="#14213D"
            android:onClick="finalizarActividad"
            android:text="Salir"
            android:textColor="#FFFFFF" />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>