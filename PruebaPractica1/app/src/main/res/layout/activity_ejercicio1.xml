<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ejercicio1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fefae0"
        android:fontFamily="sans-serif"
        tools:layout_editor_absoluteX="-151dp"
        tools:layout_editor_absoluteY="0dp">


        <TextView
            android:id="@+id/textUser"
            android:layout_width="253dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="78dp"
            android:layout_marginLeft="78dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:text="USUARIO"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#14213D"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textInfo"
            android:layout_width="289dp"
            android:layout_height="33dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="61dp"
            android:layout_marginLeft="61dp"
            android:layout_marginTop="49dp"
            android:ems="10"
            android:text="INFORMACION DEL VENDEDOR"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#14213D"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/IdImag"
            android:layout_width="128dp"
            android:layout_height="127dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="139dp"
            android:layout_marginLeft="139dp"
            android:layout_marginTop="92dp"
            android:layout_marginEnd="144dp"
            android:ems="10"
            android:src="@drawable/camara" />

        <EditText
            android:id="@+id/txtName"
            android:layout_width="382dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="14dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="245dp"
            android:digits="abcdefghijklmnopqrstuvwxyz  ABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:ems="10"
            android:hint="Nombre del vendedor"
            android:inputType="text"
            android:textColor="#14213D"
            tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/txtTotal"
            android:layout_width="383dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="14dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="365dp"
            android:ems="10"
            android:hint="Total de Ventas"
            android:inputType="number"
            android:minHeight="48dp"
            android:textColor="#14213D" />

        <EditText
            android:id="@+id/txtId"
            android:layout_width="382dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="14dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="303dp"
            android:hint="Codigo del vendedor"
            android:textColor="#14213D"
            tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

        <Spinner
            android:id="@+id/ListMes"
            android:layout_width="382dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="14dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="431dp"
            android:entries="@array/Meses"
            android:prompt="@string/Titulo"
            android:color="#14213D"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/btnCalcular"
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="54dp"
            android:layout_marginLeft="54dp"
            android:layout_marginTop="517dp"
            android:background="#14213D"
            android:onClick="Calcular"
            android:text="Agregar Foto y Calcular Comision"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnSalir"
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="54dp"
            android:layout_marginLeft="54dp"
            android:layout_marginTop="586dp"
            android:background="#14213D"
            android:onClick="finalizarActividad"
            android:text="Volver al Menu"
            android:textColor="#FFFFFF" />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>